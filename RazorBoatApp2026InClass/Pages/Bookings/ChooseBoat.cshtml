@page
@using SailClubLibrary.Models;
@model RazorBoatApp2026InClass.Pages.Bookings.ChooseBoatModel
@{
    ViewData["Title"] = "Create booking";
}

<h1>Choose a boat</h1>
<h5>There are @Model.Boats.Count() boats to choose from</h5>
<h5>Today is @DateTime.Now</h5>

<form method="get">
    Search: <input type="text" asp-for="@Model.FilterCriteria" />
    <input type="submit" value="Filter" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <form method="get">
                    <button type="submit" class="btn btn-link" style="padding:0px" name="SortBy" value="ID">ID</button>
                </form>
            </th>
            <th>BoatType</th>
            <th>Model</th>
            <th>SailNumber</th>
            <th>
                <form method="get">
                    <button type="submit" class="btn btn-link" style="padding:0px" name="SortBy" value="YearOfConstruction">YearOfConstruction</button>
                </form>
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (Boat item in Model.Boats)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TheBoatType</td>
                <td>@item.Model</td>
                <td>@item.SailNumber</td>
                <td>@item.YearOfConstruction</td>
                <td>
                    <a asp-page="CreateBooking" asp-route-sailNumber="@item.SailNumber">Choose boat</a>
                </td>
            </tr>
        }

    </tbody>
</table>