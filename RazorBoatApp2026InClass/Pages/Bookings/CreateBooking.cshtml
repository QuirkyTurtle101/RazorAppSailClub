@page
@using SailClubLibrary.Models
@model RazorBoatApp2026InClass.Pages.Bookings.CreateBookingModel
@{
    ViewData["Title"] = "Create booking";
}

<h1>Create your booking</h1>

<p>Boat ID: @Model.BoatChosen.Id</p>
<p>Sail number: @Model.BoatChosen.SailNumber</p>
<p>Model: @Model.BoatChosen.Model</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <p>Enter the phone number for your booking:</p>
        <input type="text" asp-for="@Model.PhoneNumber" />
    </div>
    
    <div class="form-group">
        <p>Enter your destination:</p>
        <input type="text" asp-for="@Model.Destination" />
    </div>
    
    <div class="form-group">
        <p>Choose a starting date and time:</p>
        <input type="datetime-local" asp-for="@Model.StartDate" />
    </div>
    
    <div class="form-group">
        <p>Choose an end date and time:</p>
        <input type="datetime-local" asp-for="@Model.EndDate" />
    </div>
    
    <div class="form-group">
        <input type="submit" value="Create a boat" class="btn btn-primary" />
    </div>
</form>
