@page
@using SailClubLibrary.Models
@model RazorBoatApp2026InClass.Pages.Members.EditMemberModel
@{
    ViewData["Title"] = "Edit member";
}

<h1>Update member</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.Id" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.Id" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.FirstName" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.SurName" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.SurName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.PhoneNumber" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.Address" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.City" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.Mail" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.Mail" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.TheMemberType" class="control-label"></label>
        <Select asp-for="@Model.MemberToUpdate.TheMemberType" asp-items="Html.GetEnumSelectList<MemberType>()" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.TheMemberRole" class="control-label"></label>
        <Select asp-for="@Model.MemberToUpdate.TheMemberRole" asp-items="Html.GetEnumSelectList<MemberRole>()" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" asp-page-handler="Update" value="Update member" class="btn btn-primary" />
    </div>
    <div class="form-group">
        <input type="submit" asp-page-handler="Delete" value="Delete member" class="btn btn-primary" />
    </div>

    <div>
        <a asp-page="index">Back to list of members</a>
    </div>

</form>