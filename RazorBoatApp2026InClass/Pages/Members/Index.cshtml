@page
@using SailClubLibrary.Models;
@model RazorBoatApp2026InClass.Pages.Members.IndexModel
@{
    ViewData["Title"] = "List members";
}

<h1>List of members</h1>

<p>
    <a asp-page="CreateMember">Create a new member</a>
</p>

<!--
FirstName - string
SurName - string
PhoneNumber - string
Address - string
City - string
Mail - string
TheMemberType - MemberType (Enum)
TheMemberRole - MemberRole (Enum)
Id - int
-->

<table class="table">
    <thead>
        <tr>
            <th>Member ID</th>
            <th>First name</th>
            <th>Surname</th>
            <th>Phone number</th>
            <th>Address</th>
            <th>City</th>
            <th>Mail</th>
            <th>Member type</th>
            <th>Member role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Member m in Model.Members)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.FirstName</td>
                <td>@m.SurName</td>
                <td>@m.PhoneNumber</td>
                <td>@m.Address</td>
                <td>@m.City</td>
                <td>@m.Mail</td>
                <td>@m.TheMemberType</td>
                <td>@m.TheMemberRole</td>
                <td><a asp-page="DeleteMember" asp-route-phoneNumber="@m.PhoneNumber">Delete</a> | <a asp-page="EditMember" asp-route-phoneNumber="@m.PhoneNumber">Edit</a></td>
            </tr>
        }
    </tbody>
</table>